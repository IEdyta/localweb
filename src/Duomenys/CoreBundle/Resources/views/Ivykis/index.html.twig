{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Įvykių sąrašas</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Pavadinimas</th>
                <th>Data</th>
                <th>Vieta</th>
                <th>Kategorija</th>
                <th>Id</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ivykis_show', { 'id': entity.id }) }}">{{ entity.pavadinimas }}</a></td>
                <td>{% if entity.data %}{{ entity.data|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.vieta }}</td>
                <td>{{ entity.kategorija }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ivykis_show', { 'id': entity.id }) }}">pavaizduoti</a>
                    </li>
                    <li>
                        <a href="{{ path('ivykis_edit', { 'id': entity.id }) }}">redaguoti</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ivykis_new') }}">
                Sukurti naują įvykį
            </a>
        </li>
    </ul>
    {% endblock %}
